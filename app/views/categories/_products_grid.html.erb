<div class="features_items"><!--features_items-->
  <h2 class="title text-center">Features Items</h2>
  <%= cache products do %>
    <% products.each_slice(3) do |row| %>
      <% row.each do |product| %>
        <%= cache product do %>
          <div class="col-sm-4">
            <div class="product-image-wrapper">
              <div class="single-products">
                  <div class="productinfo text-center">
                    <a href="<%= seo_product_path(product, product.seo_name) %>">
                      <% if product.images.any? %>
                        <%= image_tag product.images.first.image.url(:medium), class: 'media-object', alt: product.name %>
                      <% else %>
                        <%= image_tag ('missing.png'), class: 'media-object'  %>
                      <% end %>
                    </a>
                    <% if product.in_stock? %>
                      <h2>
                        <%= number_to_currency product.price %>
                      </h2>
                      <p><%= link_to product.name, seo_product_path(product, product.seo_name) %></p>
                      <p><%= link_to "<i class='fa fa-shopping-cart'></i> #{t('store.add_to_cart_button_text')}".html_safe, cart_items_path(product_id: product.id), class: 'btn btn-default add-to-cart', remote: true, method: :post %></p>
                    <% else %>
                      <h2 class="text-muted">
                        <%= number_to_currency product.price %>
                      </h2>
                      <p><%= link_to product.name, seo_product_path(product, product.seo_name) %></p>
                      <p><%= link_to t('store.more_info'), seo_product_path(product, product.seo_name), class: 'btn btn-default add-to-cart' %></p>
                    <% end %>
                  </div>


                  <div class="product-overlay">
                    <div class="overlay-content">
                      <% if product.in_stock? %>
                        <h2>
                          <%= number_to_currency product.price %>
                        </h2>
                        <p><%= highlight(truncate(product.description, length: 150), search_query) %></p>
                        <p><%= link_to "<i class='fa fa-shopping-cart'></i> #{t('store.add_to_cart_button_text')}".html_safe, cart_items_path(product_id: product.id), class: 'btn btn-default add-to-cart', remote: true, method: :post %></p>
                      <% else %>
                        <h2 class="text-muted">
                          <%= number_to_currency product.price %>
                        </h2>
                        <p><%= highlight(truncate(product.description, length: 150), search_query) %></p>
                        <p><%= link_to t('store.more_info'), seo_product_path(product, product.seo_name), class: 'btn btn-default add-to-cart' %></p>
                      <% end %>
                    </div>
                  </div>
                  <% unless product.in_stock? %>
                    <product class="new">
                      <%= t('store.out_of_stock')%>
                    </product>
                  <% end %>
              </div>
              <div class="choose">
                <ul class="nav nav-pills nav-justified">
                  <li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                  <li><%= link_to "<i class='fa fa-plus-square'></i> View Details".html_safe, seo_product_path(product, product.seo_name) %></li>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>   
    <% end %>
  <% end %> 
</div><!--features_items-->
<%= will_paginate products, renderer: BootstrapPagination::Rails %>



