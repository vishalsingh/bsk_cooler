.single-form
  %h2.text-center= t('devise.forms.heading.forgot_password')
  .row
    .col-md-4.col-md-offset-4
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post}) do |f|
        = render 'layouts/validation_errors', :model => resource
        .form-group
          = f.label :email
          = f.email_field :email, :autofocus => true, :class => 'form-control'
        .form-group
          = f.submit t('devise.forms.submit.send_reset_password'), :class => 'btn btn-primary'
      = render "devise/shared/links"
