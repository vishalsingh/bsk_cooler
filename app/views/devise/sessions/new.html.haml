.single-form
  %h2.text-center= t('devise.forms.heading.sign_in')
  .row
    .col-md-4.col-md-offset-4
      = form_for(resource, :as => resource_name, :url => new_user_session_path) do |f|
        = render 'layouts/validation_errors', :model => resource
        .form-group
          = f.label :email
          = f.email_field :email, :autofocus => true, :class => 'form-control'
        .form-group
          = f.label :password
          = f.password_field :password, :class => 'form-control'
        .form-group
          - if devise_mapping.rememberable?
            %div
              = f.check_box :remember_me
              = f.label :remember_me
        .form-group
          = f.submit t('devise.forms.submit.sign_in'), :class => 'btn btn-primary'
      / = render "devise/shared/links"
