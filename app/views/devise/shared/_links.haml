- if controller_name != 'sessions'
  = link_to t('devise.forms.links.sign_in'), new_user_session_path
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('devise.forms.links.sign_up'), new_user_registration_path
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to t('devise.forms.links.forgot_password'), new_user_password_path
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('devise.forms.links.didnt_receive_confirmation'), new_confirmation_path
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('devise.forms.links.didnt_receive_unlock'), new_unlock_path
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "#{t('devise.forms.links.sign_in_with')} #{provider.to_s.titleize}", omniauth_authorize_path(provider)
