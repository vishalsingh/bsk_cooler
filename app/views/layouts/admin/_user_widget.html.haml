.btn-group.pull-right
  %button.btn.btn-default.btn-xs.dropdown-toggle{type: 'button', data: { toggle: 'dropdown' } }
    = glyphicon 'glyphicon-user'
    = current_user.full_name
    %span.caret
  %ul.dropdown-menu{ role: 'menu' }
    %li= link_to glyphicon('glyphicon-wrench', text: t('admin.sidebar.preferences')), admin_preferences_path
    %li.divider
    %li= link_to glyphicon('glyphicon-log-out', text: t('common.sign_out')), destroy_user_session_path